{
    "manifest_version": 2,

    "name": "Classic share for LinkedIn",
    "description": "Browser extension to allow to .",
    "version": "0.0.1",

    "permissions": [
        "tabs",
        "<all_urls>"
    ],
    "browser_action": {
        "default_icon": "icon32.png"
    },
    "icons": {
        "128": "icon128.png",
        "64": "icon64.png",
        "48": "icon48.png",
        "32": "icon32.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [ "content.js" ],
            "run_at": "document_end"
        }
    ],
    "background": {
        "scripts": ["background.js"]
    }
}
